<h1>RESET PASSWORD</h1>

<%=form_with url: password_reset_path do |form| %>
  <div class="mb-3 col-4">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "name@email.com" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Reset Password", class: "btn btn-primary", disable_with: 'Submiting...' %>
  </div>
<% end %>
